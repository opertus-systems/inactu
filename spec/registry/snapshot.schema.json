{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Registry Snapshot (v0)",
  "type": "object",
  "required": [
    "snapshot_hash",
    "timestamp",
    "entries"
  ],
  "additionalProperties": false,
  "properties": {
    "snapshot_hash": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "timestamp": {
      "type": "integer",
      "minimum": 0
    },
    "entries": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^sha256:[0-9a-f]{64}$"
      }
    }
  }
}

